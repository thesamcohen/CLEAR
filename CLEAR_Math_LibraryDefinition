    primitive.exp(input1)
    definition: exp = exponential
End

// Date and Time Functions
function CurrentDate()
    primitive.current_date()
    definitions: current date = today = now
End

function AddDays()
    primitive.add_days(date, days)
    definitions: add days = future date
End

function SubtractDays()
    primitive.subtract_days(date, days)
    definitions: subtract days = past date
End

function DayOfWeek()
    primitive.day_of_week(date)
    definitions: day of week = weekday
End

// List and Collection Functions
function Sort()
    primitive.sort(list)
    definitions: sort = order list
End

function Filter()
    primitive.filter(list, condition)
    definitions: filter = find matching = conditional filter
End

function Map()
    primitive.map(list, function)
    definitions: map = transform
End

function Reduce()
    primitive.reduce(list, function)
    definitions: reduce = fold
End

function LengthOfList()
    primitive.length(list)
    definitions: list length = size of list = count
End

// Advanced Math Functions
function mod()
    primitive.modulo(input1, input2)
    definitions: mod = modulus = remainder
End

function gcd()
    primitive.greatest_common_divisor(input1, input2)
    definitions: gcd = greatest common divisor
End

function lcm()
    primitive.least_common_multiple(input1, input2)
    definitions: lcm = least common multiple
